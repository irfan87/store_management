<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Log In</h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'Your email address', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Your password', class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me, class: 'form-control'%>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-primary' %>
      </div>
      <%= render "devise/shared/links" %> 
    <% end %>
    </div>
  </div>
</div>
