<div class="col-md-6 col-xs-offset-3">
	<div class="panel">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		 	<%= devise_error_messages!%>
			<div class="panel-heading">
				<h2>Hey, I've forgot my password!</h2>
			</div>
			<div class="panel-body">
			  <div class="form-group">
			    <%= f.email_field :email, autofocus: true, placeholder: 'Please enter your email address', class: 'form-control' %>
				  <div>
						<small>
							p/s: Don't sweat. We promise we will not harmed or spammed you in the future. =)
						</small>
					</div>
			  </div>
			  <div class="form-group">
			    <%= f.submit "Send", class: 'btn btn-primary' %>
			  </div>
			  <%= render "devise/shared/links" %>
			</div>
		<% end %>
	</div>
</div>
